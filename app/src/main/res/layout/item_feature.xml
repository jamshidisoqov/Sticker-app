<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_feature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_standart"
        android:background="@drawable/bg_feature">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_feature"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_eraser"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/left_point"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/bg_circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/container_feature"
        app:layout_constraintStart_toStartOf="@id/container_feature"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/right_point"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/bg_circle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/container_feature"
        app:layout_constraintStart_toEndOf="@id/container_feature"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>